@page
@model GestionBiblioteca.Pages.Prestamo.Details
@{
    ViewData["Title"] = "Detalle de préstamo";
}
<div class="page-title">
    <div class="icon"><i class="bi bi-eye"></i></div>
    <h1 class="h3 m-0">Detalle de préstamo</h1>
</div>

@if (Model.Prestamo != null)
{
    var limiteGlobal = Model.Prestamo.PrestamoEjemplares != null && Model.Prestamo.PrestamoEjemplares.Count > 0
        ? Model.Prestamo.PrestamoEjemplares.Max(pe => pe.FechaLimite)
        : (DateTime?)null;

    <div class="card">
        <div class="card-body">
            <div class="row g-3 mb-3">
                <div class="col-md-6">
                    <div class="text-muted small">Lector</div>
                    <div class="fs-5">@Model.Prestamo.IdUsuarioNavigation?.PrimerNombre @Model.Prestamo.IdUsuarioNavigation?.PrimerApellido</div>
                </div>
                <div class="col-md-3">
                    <div class="text-muted small">Fecha préstamo</div>
                    <div>@Model.Prestamo.FechaPrestamo?.ToString("dd/MM/yyyy HH:mm")</div>
                </div>
                <div class="col-md-3">
                    <div class="text-muted small">Fecha límite (máxima)</div>
                    <div>@(limiteGlobal.HasValue? limiteGlobal.Value.ToString("dd/MM/yyyy HH:mm") : "-")</div>
                </div>
            </div>

            <h2 class="h6">Ejemplares</h2>
            <ul class="list-group">
                @if (Model.Prestamo.PrestamoEjemplares != null && Model.Prestamo.PrestamoEjemplares.Count > 0)
                {
                    foreach (var e in Model.Prestamo.PrestamoEjemplares)
                    {
                        <li class="list-group-item d-flex align-items-center justify-content-between">
                            <span>
                                <i class="bi bi-book"></i>
                                @e.IdEjemplarNavigation?.IdLibroNavigation?.Titulo
                                @if (!string.IsNullOrEmpty(e.IdEjemplarNavigation?.IdLibroNavigation?.Isbn))
                                {
                                    <span class="text-muted small ms-1">ISBN: @e.IdEjemplarNavigation.IdLibroNavigation.Isbn</span>
                                }
                                <span class="badge text-bg-light ms-2">Ejemplar #@e.IdEjemplar</span>
                            </span>
                            <div class="d-flex align-items-center gap-3">
                                <span class="text-muted small">Límite:</span>
                                <span class="badge text-bg-info">
                                    @(e.FechaLimite.HasValue? e.FechaLimite.Value.ToString("dd/MM/yyyy HH:mm") : "-")
                                </span>
                                <span class="badge text-bg-info">Copia</span>
                            </div>
                        </li>
                    }
                }
                else
                {
                    <li class="list-group-item text-muted">Sin ejemplares asociados.</li>
                }
            </ul>

            <div class="mt-3">
                <a asp-page="Index" class="btn btn-outline-primary"><i class="bi bi-arrow-left"></i> Volver</a>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert">No se encontró el préstamo.</div>
}
