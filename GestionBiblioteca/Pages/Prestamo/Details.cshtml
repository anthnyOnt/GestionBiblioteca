@page
@model GestionBiblioteca.Pages.Prestamo.Details

@{
    ViewData["Title"] = "Prestamo";
}

<h1>Prestamo</h1>

<div>
    <h4>Prestamos</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Lector
        </dt>
        <dd class="col-sm-10">
            @Model.Prestamo.IdUsuarioNavigation.PrimerNombre @Model.Prestamo.IdUsuarioNavigation.PrimerApellido
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Prestamo.FechaPrestamo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Prestamo.FechaPrestamo)
        </dd>
        <div class="col-sm-2">
            <b>Ejemplares prestados</b>
            <ul>
                @foreach (var e in Model.Prestamo.PrestamoEjemplares)
                {
                    <li>
                        @e.IdEjemplarNavigation.IdLibroNavigation.Titulo @e.IdEjemplarNavigation.IdLibroNavigation.Isbn
                    </li>
                }
            </ul>
        </div>

    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Prestamo.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
