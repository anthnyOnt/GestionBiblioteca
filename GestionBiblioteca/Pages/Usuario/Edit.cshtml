@page "{id:int}"
@model GestionBiblioteca.Pages.Usuario.Edit
@{
    ViewData["Title"] = "Editar lector";
}
<div class="page-title">
    <div class="icon"><i class="bi bi-pencil-square"></i></div>
    <h1 class="h3 m-0">Editar lector</h1>
</div>

<form method="post" class="mt-3">
    <div class="row g-3">
        <div class="col-md-4">
            <label asp-for="Input.Ci" class="form-label">CI</label>
            <input asp-for="Input.Ci" class="form-control" />
        </div>
        <div class="col-md-4">
            <label asp-for="Input.PrimerNombre" class="form-label">Primer nombre</label>
            <input asp-for="Input.PrimerNombre" class="form-control" />
        </div>
        <div class="col-md-4">
            <label asp-for="Input.SegundoNombre" class="form-label">Segundo nombre</label>
            <input asp-for="Input.SegundoNombre" class="form-control" />
        </div>
        <div class="col-md-4">
            <label asp-for="Input.PrimerApellido" class="form-label">Primer apellido</label>
            <input asp-for="Input.PrimerApellido" class="form-control" />
        </div>
        <div class="col-md-4">
            <label asp-for="Input.SegundoApellido" class="form-label">Segundo apellido</label>
            <input asp-for="Input.SegundoApellido" class="form-control" />
        </div>
        <div class="col-md-4">
            <label asp-for="Input.Telefono" class="form-label">Teléfono</label>
            <input asp-for="Input.Telefono" class="form-control" />
        </div>
        <div class="col-md-6">
            <label asp-for="Input.Correo" class="form-label">Correo</label>
            <input asp-for="Input.Correo" class="form-control" />
        </div>
    </div>
    <div class="mt-4 d-flex gap-2">
        <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i> Guardar cambios</button>
        <a asp-page="Index" class="btn btn-outline-primary">Cancelar</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
