@page "{id:int}"
@model GestionBiblioteca.Pages.Usuario.Delete
@{
    ViewData["Title"] = "Eliminar lector";
}
<div class="page-title">
    <div class="icon"><i class="bi bi-person-x"></i></div>
    <h1 class="h3 m-0">Eliminar lector</h1>
</div>

<div class="card">
    <div class="card-body">
        <p class="mb-3">¿Seguro que deseas eliminar a <strong>@Model.Nombre</strong>?</p>
        <form method="post" class="d-flex gap-2">
            <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Eliminar</button>
            <a asp-page="Index" class="btn btn-outline-primary">Cancelar</a>
        </form>
    </div>
</div>
