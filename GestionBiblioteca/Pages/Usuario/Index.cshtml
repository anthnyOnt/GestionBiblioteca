@page
@model GestionBiblioteca.Pages.Usuario.Index
@{
    ViewData["Title"] = "Lectores";
}
<div class="page-title">
    <div class="icon"><i class="bi bi-people"></i></div>
    <h1 class="h3 m-0">Lectores</h1>
    <div class="ms-auto">
        <a class="btn btn-primary" asp-page="Create"><i class="bi bi-person-plus"></i> Nuevo lector</a>
    </div>
</div>

@if (Model.Usuarios != null && Model.Usuarios.Count > 0)
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>CI</th>
                <th>Teléfono</th>
                <th>Correo</th>
                <th class="text-end">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var u in Model.Usuarios)
            {
                <tr>
                    <td>@u.PrimerNombre @u.PrimerApellido</td>
                    <td><span class="badge text-bg-secondary">@u.Ci</span></td>
                    <td>@(string.IsNullOrEmpty(u.Telefono) ? "-" : u.Telefono)</td>
                    <td>@(string.IsNullOrEmpty(u.Correo) ? "-" : u.Correo)</td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-primary" asp-page="Edit" asp-route-id="@u.Id"><i class="bi bi-pencil-square"></i></a>
                        <a class="btn btn-sm btn-outline-danger" asp-page="Delete" asp-route-id="@u.Id"><i class="bi bi-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{

    <div class="alert">No hay lectores registrados.</div>
}
