@page
@model GestionBiblioteca.Pages.Usuario.Create
@{
    ViewData["Title"] = "Nuevo lector";
}
<div class="page-title">
    <div class="icon"><i class="bi bi-person-plus"></i></div>
    <h1 class="h3 m-0">Nuevo lector</h1>
</div>

<form method="post" class="mt-3">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>
    <div class="row g-3">
        <div class="col-md-4">
            <label for="Input_Ci" class="form-label">CI</label>
            <input name="Input.Ci" id="Input_Ci" class="form-control" value="@Model.Input.Ci" data-testid="ci" />
            <span asp-validation-for="Input.Ci" class="text-danger" data-testid="ci-error"></span>
        </div>
        <div class="col-md-4">
            <label for="Input_PrimerNombre" class="form-label">Primer nombre</label>
            <input name="Input.PrimerNombre" id="Input_PrimerNombre" class="form-control" value="@Model.Input.PrimerNombre" data-testid="primernombre" />
            <span asp-validation-for="Input.PrimerNombre" class="text-danger" data-testid="primernombre-error"></span>
        </div>
        <div class="col-md-4">
            <label for="Input_SegundoNombre" class="form-label">Segundo nombre</label>
            <input name="Input.SegundoNombre" id="Input_SegundoNombre" class="form-control" value="@Model.Input.SegundoNombre" data-testid="segundonombre" />
            <span asp-validation-for="Input.SegundoNombre" class="text-danger" data-testid="segundonombre-error"></span>
        </div>
        <div class="col-md-4">
            <label for="Input_PrimerApellido" class="form-label">Primer apellido</label>
            <input name="Input.PrimerApellido" id="Input_PrimerApellido" class="form-control" value="@Model.Input.PrimerApellido" data-testid="primerapellido" />
            <span asp-validation-for="Input.PrimerApellido" class="text-danger" data-testid="primerapellido-error"></span>
            
        </div>
        <div class="col-md-4">
            <label for="Input_SegundoApellido" class="form-label">Segundo apellido</label>
            <input name="Input.SegundoApellido" id="Input_SegundoApellido" class="form-control" value="@Model.Input.SegundoApellido" data-testid="segundoapellido" />
            <span asp-validation-for="Input.SegundoApellido" class="text-danger" data-testid="segundoapellido-error"></span>
            
        </div>
        <div class="col-md-4">
            <label for="Input_Telefono" class="form-label">Teléfono</label>
            <input name="Input.Telefono" id="Input_Telefono" class="form-control" value="@Model.Input.Telefono" data-testid="telefono" />
            <span asp-validation-for="Input.Telefono" class="text-danger" data-testid="telefono-error"></span>
            
        </div>
        <div class="col-md-6">
            <label for="Input_Correo" class="form-label">Correo</label>
            <input name="Input.Correo" id="Input_Correo" class="form-control" value="@Model.Input.Correo" data-testid="correo" />
            <span asp-validation-for="Input.Correo" class="text-danger" data-testid="correo-error"></span>
            
        </div>
    </div>
    <div class="mt-4 d-flex gap-2">
        <button type="submit" class="btn btn-primary" data-testid="submit-button"><i class="bi bi-check2-circle"></i> Guardar</button>
        <a asp-page="Index" class="btn btn-outline-primary">Cancelar</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
