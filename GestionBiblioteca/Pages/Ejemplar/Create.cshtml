@page
@model GestionBiblioteca.Pages.Ejemplar.Create
@{
    ViewData["Title"] = "Nuevo ejemplar";
}
<div class="page-title">
    <div class="icon"><i class="bi bi-box-seam"></i></div>
    <h1 class="h3 m-0">Nuevo ejemplar</h1>
</div>

<form method="post" class="mt-3">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>
    <div class="row g-3">
        <div class="col-md-6">
            <label asp-for="Input.IdLibro" class="form-label">Libro</label>
            <select name="Input.IdLibro" id="Input_IdLibro" class="form-select" data-testid="idlibro" asp-items="Model.LibrosSelect">
                <option value="">-- Seleccione un libro --</option>
            </select>
            <span asp-validation-for="Input.IdLibro" class="text-danger" data-testid="idlibro-error"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Input.FechaAdquisicion" class="form-label">Fecha adquisición</label>
            <input asp-for="Input.FechaAdquisicion" class="form-control" type="date" data-testid="fechaadquisicion" />
            <span asp-validation-for="Input.FechaAdquisicion" class="text-danger" data-testid="fechaadquisicion-error"></span>
        </div>

        <div class="col-12">
            <label asp-for="Input.Descripcion" class="form-label">Descripción</label>
            <input name="Input.Descripcion" id="Input_Descripcion" class="form-control" value="@Model.Input.Descripcion" data-testid="descripcion" />
            <span asp-validation-for="Input.Descripcion" class="text-danger" data-testid="descripcion-error"></span>
        </div>

        <div class="col-12">
            <label asp-for="Input.Observaciones" class="form-label">Observaciones</label>
            <input name="Input.Observaciones" id="Input_Observaciones" class="form-control" value="@Model.Input.Observaciones" data-testid="observaciones" />
            <span asp-validation-for="Input.Observaciones" class="text-danger" data-testid="observaciones-error"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="Input.Disponible" class="form-label">Disponible</label>
            <select name="Input.Disponible" id="Input_Disponible" class="form-select" data-testid="disponible">
                <option value="true">Sí</option>
                <option value="false">No</option>
            </select>
        </div>
    </div>

    <div class="mt-4 d-flex gap-2">
        <button type="submit" class="btn btn-primary" data-testid="submit-button"><i class="bi bi-check2-circle"></i> Guardar</button>
        <a asp-page="Index" class="btn btn-outline-primary">Cancelar</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
