@page
@model GestionBiblioteca.Pages.Ejemplar.Create
@{
    ViewData["Title"] = "Nuevo ejemplar";
}
<div class="page-title">
    <div class="icon"><i class="bi bi-box-seam"></i></div>
    <h1 class="h3 m-0">Nuevo ejemplar</h1>
</div>

<form method="post" class="mt-3">
    <div class="row g-3">
        <div class="col-md-6">
            <label asp-for="Input.IdLibro" class="form-label">Libro</label>
            <select asp-for="Input.IdLibro" class="form-select" asp-items="Model.LibrosSelect">
                <option value="">-- Seleccione un libro --</option>
            </select>
            <span asp-validation-for="Input.IdLibro" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Input.FechaAdquisicion" class="form-label">Fecha adquisición</label>
            <input asp-for="Input.FechaAdquisicion" class="form-control" type="date" />
            <span asp-validation-for="Input.FechaAdquisicion" class="text-danger"></span>
        </div>

        <div class="col-12">
            <label asp-for="Input.Descripcion" class="form-label">Descripción</label>
            <input asp-for="Input.Descripcion" class="form-control" />
            <span asp-validation-for="Input.Descripcion" class="text-danger"></span>
        </div>

        <div class="col-12">
            <label asp-for="Input.Observaciones" class="form-label">Observaciones</label>
            <input asp-for="Input.Observaciones" class="form-control" />
            <span asp-validation-for="Input.Observaciones" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="Input.Disponible" class="form-label">Disponible</label>
            <select asp-for="Input.Disponible" class="form-select">
                <option value="true">Sí</option>
                <option value="false">No</option>
            </select>
        </div>
    </div>

    <div class="mt-4 d-flex gap-2">
        <button type="submit" class="btn btn-primary"><i class="bi bi-check2-circle"></i> Guardar</button>
        <a asp-page="Index" class="btn btn-outline-primary">Cancelar</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
