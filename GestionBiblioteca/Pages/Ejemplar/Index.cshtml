@page
@model GestionBiblioteca.Pages.Ejemplar.Index
@{
    ViewData["Title"] = "Ejemplares";
}
<div class="page-title">
    <div class="icon"><i class="bi bi-box-seam"></i></div>
    <h1 class="h3 m-0">Ejemplares</h1>
    <div class="ms-auto">
        <a class="btn btn-primary" asp-page="Create"><i class="bi bi-plus-lg"></i> Nuevo ejemplar</a>
    </div>
</div>

@if (Model.Ejemplares != null && Model.Ejemplares.Count > 0)
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Libro</th>
                <th>Descripción</th>
                <th>Disponible</th>
                <th>Fecha admisión</th>
                <th class="text-end">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var e in Model.Ejemplares)
            {
                <tr>
                    <td>@e.IdLibroNavigation?.Titulo</td>
                    <td>@(string.IsNullOrEmpty(e.Descripcion) ? "-" : e.Descripcion)</td>
                    <td>@(e.Disponible == true ? "Sí" : "No")</td>
                    <td>@e.FechaAdquisicion.ToString("yyyy-MM-dd")</td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-primary" asp-page="Edit" asp-route-id="@e.Id"><i class="bi bi-pencil-square"></i></a>
                        <a class="btn btn-sm btn-outline-secondary" asp-page="Details" asp-route-id="@e.Id"><i class="bi bi-eye"></i></a>
                        <a class="btn btn-sm btn-outline-danger" asp-page="Delete" asp-route-id="@e.Id"><i class="bi bi-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert">No hay ejemplares registrados.</div>
}
