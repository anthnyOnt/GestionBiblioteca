@page "{id:int}"
@model GestionBiblioteca.Pages.Ejemplar.Details
@{
    ViewData["Title"] = "Detalle ejemplar";
}
<div class="page-title">
    <div class="icon"><i class="bi bi-eye"></i></div>
    <h1 class="h3 m-0">Detalle ejemplar</h1>
</div>

<div class="mt-3">
    <dl class="row">
        <dt class="col-sm-3">Libro</dt>
        <dd class="col-sm-9">@Model.Input?.IdLibroNavigation?.Titulo</dd>

        <dt class="col-sm-3">Descripción</dt>
        <dd class="col-sm-9">@Model.Input?.Descripcion</dd>

        <dt class="col-sm-3">Observaciones</dt>
        <dd class="col-sm-9">@Model.Input?.Observaciones</dd>

        <dt class="col-sm-3">Disponible</dt>
        <dd class="col-sm-9">@(Model.Input?.Disponible == true ? "Sí" : "No")</dd>
    </dl>

    <div class="d-flex gap-2">
        <a asp-page="Edit" asp-route-id="@Model.Input?.Id" class="btn btn-primary">Editar</a>
        <a asp-page="Index" class="btn btn-outline-primary">Volver</a>
    </div>
</div>
