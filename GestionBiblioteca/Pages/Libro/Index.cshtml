@page
@model GestionBiblioteca.Pages.Libro.Index
@{
    ViewData["Title"] = "Libros";
}
<div class="page-title">
    <div class="icon"><i class="bi bi-book"></i></div>
    <h1 class="h3 m-0">Libros</h1>
    <div class="ms-auto">
        <a class="btn btn-primary" asp-page="Create"><i class="bi bi-plus-lg"></i> Nuevo libro</a>
    </div>
</div>

@if (Model.Libros != null && Model.Libros.Count > 0)
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Título</th>
                <th>ISBN</th>
                <th>Edición</th>
                <th>Fecha publicación</th>
                <th class="text-end">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var l in Model.Libros)
            {
                <tr>
                    <td>@l.Titulo</td>
                    <td><span class="badge text-bg-secondary">@l.Isbn</span></td>
                    <td>@(string.IsNullOrEmpty(l.Edicion) ? "-" : l.Edicion)</td>
                    <td>@(l.FechaPublicacion?.ToString("yyyy-MM-dd") ?? "-")</td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-primary" asp-page="Edit" asp-route-id="@l.Id"><i class="bi bi-pencil-square"></i></a>
                        <a class="btn btn-sm btn-outline-secondary" asp-page="Details" asp-route-id="@l.Id"><i class="bi bi-eye"></i></a>
                        <a class="btn btn-sm btn-outline-danger" asp-page="Delete" asp-route-id="@l.Id"><i class="bi bi-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert">No hay libros registrados.</div>
}
