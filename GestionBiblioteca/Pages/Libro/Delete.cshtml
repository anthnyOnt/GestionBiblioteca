@page "{id:int}"
@model GestionBiblioteca.Pages.Libro.Delete
@{
    ViewData["Title"] = "Eliminar libro";
}
<div class="page-title">
    <div class="icon"><i class="bi bi-trash"></i></div>
    <h1 class="h3 m-0">Eliminar libro</h1>
</div>

<div class="mt-3">
    <p>¿Está seguro que desea eliminar el libro <strong>@Model.Input?.Titulo</strong>?</p>

    <form method="post">
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-page="Index" class="btn btn-outline-primary">Cancelar</a>
        </div>
    </form>
</div>
